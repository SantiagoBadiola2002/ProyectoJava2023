<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Lab1PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>logica.Departamento</class>
    <class>logica.Actividad</class>
    <class>logica.Paquete</class>
    <class>logica.SalidaTuristica</class>
    <class>logica.Proveedor</class>
    <class>logica.Turista</class>
    <class>logica.Inscripcion</class>
    <class>logica.ImagenPerfil</class>
    <class>logica.Categoria</class>
    <class>logica.Compra</class>
    <class>logica.imagenActividad</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lab?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="tecnologo"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="Tecnologo"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
